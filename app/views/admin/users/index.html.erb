<div class='container'>
  <div class='row'>
    <div class='col text-center'>
      <h3 class='panel-title'>USERS</h3>
    </div>
  </div>

  <div class='row'>
    <div class='col text-center'>
      <%= render 'partials/search_form' %>
    </div>
  </div>
  <%= render 'partials/clear_search', path: admin_users_path %>

  <table class='table table-hover'>
    <thead>
      <tr>
        <th scope='col'><%= sort_link "email" %></th>
        <th scope='col'><%= sort_link "first_name" %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td scope='row'><%= user.email %></td>
          <td><%= user.first_name %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
          <td><%= link_to 'Delete', admin_user_path(user), method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= render 'partials/pagy_menu' %>
