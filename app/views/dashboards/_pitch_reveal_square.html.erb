<div id='pitch-reveal-square'>
  <div class='row'>
    <div class='col-xs-12 col-md-6  offset-md-3 text-start text-wrap'>
      <div class='bad-pitch-square'>
        <div class='row'>
          <div class='col'>
            <span class='new-bad fst-italic'>My new bad pitch:</span><br />
            <div class='pitch-results'>
              <p><%= @sentence %></p>
            </div>
          </div>
          <div class='row'>
            <div class='col-8 pitch-plug start-bottom ms-auto'>
              make your own bad pitch at<br />pitches.publicover.co
            </div>
            <div class='col-4 pitch-plug me-auto'>
              <%= image_tag('pubco_logo_small.png', class: 'align-bottom') %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class='col-md-3 ms-auto text-start align-middle share-copy'>
      <span>
        Share your screenshot on
        <br />Linkedln and tag us,
        <br />& we'll send you a discount
        <br />code for our DIY Tools!
      </span>
      <%= image_tag('arrow_down_swirls.png', class: 'mobile-hidden') %>
    </div>

    <div class='offset-md-3 ms-auto text-start align-middle'>
      <div class='text-center'>
        <div class='closing-copy fst-italic' id='fancy-a-go'>Wow, such awful. Fancy another go?</div>
        <%= render 'pitch_button' %>
      </div>
    </div>
  </div>
</div>
